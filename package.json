{
	"name": "dotprompts",
	"version": "0.0.1",
	"type": "module",
	"main": "src/index.js",
	"scripts": {
		"start": "node src/lib/mcp/index.ts",
		"dev": "vite dev --port 5175",
		"auth:generate": "npx @better-auth/cli generate --output ./src/lib/server/db/auth-schema.ts",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio"
	},
	"keywords": [
		"tmcp",
		"mcp",
		"server"
	],
	"private": true,
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@libsql/client": "^0.15.15",
		"@sveltejs/adapter-vercel": "^6.0.0",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^24",
		"@types/set-cookie-parser": "^2.4.10",
		"drizzle-kit": "^0.31.5",
		"drizzle-orm": "^0.44.6",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1",
		"vite": "^7.1.10",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.5"
	},
	"dependencies": {
		"@fontsource-variable/fira-code": "^5.2.7",
		"@tmcp/adapter-valibot": "^0.1.5",
		"@tmcp/transport-http": "^0.8.2",
		"better-auth": "^1.3.34",
		"set-cookie-parser": "^2.7.2",
		"slugify": "^1.6.6",
		"tmcp": "^1.18.1",
		"valibot": "^1.1.0"
	}
}
